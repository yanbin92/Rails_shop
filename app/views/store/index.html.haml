%p#notice= notice
%h1= "Your Progmatic Catalog"
- cache @products do 
	- @products.each do |product|
		- cache product do
			.entry
				.img_container
					=link_to(image_tag(product.image_url),
						line_items_path(product_id: product),
						html_options = {:method => :post,:remote =>true})
				.text_container
					%h3= product.title
					= sanitize(product.description)
					.price_line 
						%span.price= number_to_currency(product.price)
						= button_to 'Add to Cart ',line_items_path(product_id: product, locale: I18n.locale),remote: true



